<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.dtu.controller.AppController">
    <TextField fx:id="messageField" promptText="Enter message here"/>
    <Button text="Send" onAction="#handleSendAction"/>
    <TextArea fx:id="messageArea" editable="false"/>
</VBox>
