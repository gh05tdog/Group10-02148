<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.dtu.controller.AppController">
   <HBox>
      <children>
         <VBox>
            <children>
                <TextField fx:id="usernameField" promptText="Enter your username" />
                <TextField fx:id="chatroomField" promptText="Enter chat room" text="lobby" />
                <Button onAction="#handleConnectAction" text="Connect" />
                <TextField fx:id="messageField" promptText="Enter message here" />
                <Button onAction="#handleSendAction" text="Send" />
                <TextArea fx:id="messageArea" editable="false" />
            </children>
         </VBox>
         <VBox>
            <children>
               <Label text="Usernames:" />
               <TextArea fx:id="usernameList" editable="false" prefWidth="300.0" />
            </children>
         </VBox>
      </children>
   </HBox>
</VBox>
